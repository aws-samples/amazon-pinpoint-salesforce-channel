{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true,
        "chai": true
    },
    "extends": "standard",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "no-unused-vars": "warn",
        "prefer-promise-reject-errors": "off"
    }
}
